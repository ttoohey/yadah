{
  "name": "phasis",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "author": "",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "npm run --quiet --workspaces --if-present -- build",
    "depcheck": "npx depcheck; npm run --quiet --workspaces --if-present -- depcheck",
    "lint": "npm run --quiet --workspaces --if-present -- lint",
    "prepare": "husky install && (cd .git/hooks; find ../../.husky -mindepth 1 -maxdepth 1 -print0 | xargs -0 -i ln -sfb {}) && npm run --workspaces --if-present prepare",
    "prettier:check": "npm run --quiet --workspaces --if-present -- prettier --check",
    "test:core": "npm test --workspace @phasis/core --",
    "test:objection-iterator": "npm test --workspace @phasis/objection-iterator --",
    "test:objection-scope": "npm test --workspace @phasis/objection-scope --",
    "test:service-listener": "npm test --workspace @phasis/service-listener --",
    "test:service-model": "npm test --workspace @phasis/service-model --",
    "test:service-schedule": "npm test --workspace @phasis/service-schedule --",
    "test": "npm test --quiet --workspaces --if-present --",
    "workspace:core": "npm run --workspace @phasis/core --",
    "workspace:objection-listener": "npm run --workspace @phasis/objection-listener --",
    "workspace:objection-scope": "npm run --workspace @phasis/objection-scope --",
    "workspace:service-listener": "npm run --workspace @phasis/service-listener --",
    "workspace:service-model": "npm run --workspace @phasis/service-model --",
    "workspace:service-schedule": "npm run --workspace @phasis/service-schedule --"
  },
  "workspaces": [
    "packages/core",
    "packages/objection-iterator",
    "packages/objection-scope",
    "packages/service-listener",
    "packages/service-model",
    "packages/service-schedule"
  ],
  "devDependencies": {
    "concurrently": "^7.2.1",
    "depcheck": "^1.4.3",
    "husky": "^8.0.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  }
}

{
  "name": "phasis",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "depcheck": "npm run depcheck --workspaces --if-present",
    "lint": "npm run --workspaces --if-present -- lint",
    "test": "npm test --workspaces --if-present",
    "test:core": "npm test --silent --workspace @phasis/core --",
    "test:service-model": "npm test --silent --workspace @phasis/service-model --",
    "test:service-schedule": "npm test --silent --workspace @phasis/service-schedule --",
    "prepare": "husky install && (cd .git/hooks; find ../../.husky -mindepth 1 -maxdepth 1 -print0 | xargs -0 -i ln -sfb {}) && npm run --workspaces --if-present prepare",
    "prettier": "prettier",
    "prettier:check": "npm run --workspaces --if-present -- prettier --check",
    "workspace:core": "npm run --silent --workspace @phasis/core --",
    "workspace:service-model": "npm run --silent --workspace @phasis/service-model --",
    "workspace:service-schedule": "npm run --silent --workspace @phasis/service-schedule --"
  },
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/core",
    "packages/service-model",
    "packages/service-schedule"
  ],
  "devDependencies": {
    "concurrently": "^7.2.1",
    "husky": "^8.0.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  }
}
